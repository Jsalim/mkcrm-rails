<h2>
	Lista de Eventos
	<em class="heading_description">Eventos agendos</em>
</h2>
<p>
	Selecione o evento clicando em <b>editar</b> para alterar e adicionar mais detalhes, obtenha mais informações sobre <b>Como adicionar e gerenciar eventos</b> acessando a <a href="#">Central de Ajuda</a>.</b>
</p>


<%= form_tag events_path, :method => "get", :id => "events_search" do %>	
<div class="horizontal_list_selection">
	
	<a id="" href="/events?status=active" class="select_button left_selector current_view">Agendados</a>
	<a id="" href="/events?status=all" class="select_button right_selector">Cancelados</a>		

	<div class="search">
		<div class="search_wrapper">
			<div class="search_icon"><img src="/images/basic/loupe.png" alt="Loupe"></div>		
			<% 	params[:start_at] ||= localize(@yesterday, :format => t("date.formats.default")) %>
			<%= text_field_tag :search, params[:search], :class =>  "search_field thin", :autocomplete => "off", :style => "width: 10em;" %>
			<%= text_field_tag :start_at, params[:start_at], :class =>  "search_field thin datepicker", :autocomplete => "off", :size => 9, :style => "width: 82px; margin-left: 4px; border-top-left-radius: 4px; border-bottom-left-radius: 4px; border-style: solid solid solid solid; border-width: 1px 1px 1px 1px;" %>			
			<script>
				$(function() {
					$( "#start_at" ).datepicker({
						dateFormat: 'dd/mm/yy',
						defaultDate: "+1w",
						changeMonth: true,
						changeYear: false
					})
				});	
			</script>
		</div>
		<div id="loading" class="hide" style="display: none;"><img src="/images/basic/loader.png?1302297477" alt="Loader"></div>
		<div class="clear"></div>
		<!--
		<a id="advanced_search" href="#">
			<div class="advanced_search_icon"></div>
			<span>Pesquisa avançada</span>
		</a>
		-->
	</div>
	<div class="clear"></div>
	
</div>
<% end %>

<div id="events">
	<%= render :partial => 'events' %>
</div>

