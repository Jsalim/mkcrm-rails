<h2>Produto do Estoque
	<em class="heading_description">Informa&ccedil;&otilde;es do produto no seu estoque</em>
</h2>

<div class="editor_area">	
	<div style="display: block; border-style: solid; margin: 16px auto 0px">
		<a style="margin-right: 10px; float: left;">
			<%= image_tag @product_inventory.product.attachment.url(:product), :alt => @product_inventory.product.name, 
			:style => "display: block; background-color: #FFFFFF; border: 1px solid #B2B2B2; padding: 2px; max-height:96px; max-width:96px;",
			:width => 96, :height => 96 %>
		</a>
		<div style="text-align: right; margin-top: 14px; padding-left: 12px; float: right;">		
			<a href="<%= edit_product_inventory_path(@product_inventory) %>" class="button">
				<span>Editar</span>
			</a>			
		</div>			
		<div style="height: 32px; vertical-align: middle; display: table-cell; width: 10000px;">
			<h3 style="color: #333333; margin-bottom: 4px;">
				<%= @product_inventory.product.name %>
			</h3>
			<div style="color: #808080; font-size: 11px;">								
				<%= ( @product_inventory.product.description.blank? ? '(sem descrição)' :  @product_inventory.product.description ) %>
			</div>							
			<div style="color: '#333333'; font-size: 24px; padding-top: 32px;">								
				Dispon&iacute;vel: <%= number_with_delimiter(@product_inventory.count) %> unid.
			</div>
	  </div>
	</div>
	
	
	<div class="clear"></div>
	<br />
	
	
	<div id="product_inventory_editor_desc" class="clear" style="">										
		<% bar = "progressbar_#{@product_inventory.id}"%>							
		<div >									
			<div id="<%= bar %>"></div>
		</div>
		<script>
			$(function() {
				$( "#<%= bar %>" ).progressbar({
					value: <%= @product_inventory.availability %>
				});
			});			
		</script>	
		<div class="alignleft"><%= number_with_delimiter(@product_inventory.min) %> (m&iacute;nimo)</div>
		<div class="alignright"><%= number_with_delimiter(@product_inventory.max) %> (m&aacute;ximo)</div>
		<div class="clear"></div>					
	</div>

	<div class="clear"></div>
</div>
<div class="clear"></div>
<br />
