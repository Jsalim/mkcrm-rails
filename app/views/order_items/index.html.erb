<h1>Listing order_items</h1>

<table>
  <tr>
    <th>Order</th>
    <th>Product</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Status</th>
    <th>Shipped at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @order_items.each do |order_item| %>
  <tr>
    <td><%= order_item.order %></td>
    <td><%= order_item.product %></td>
    <td><%= order_item.price %></td>
    <td><%= order_item.quantity %></td>
    <td><%= order_item.status %></td>
    <td><%= order_item.shipped_at %></td>
    <td><%= link_to 'Show', order_item %></td>
    <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
    <td><%= link_to 'Destroy', order_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

