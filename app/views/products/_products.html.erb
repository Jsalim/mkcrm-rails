<div class="paginate">
	<div class="left">
		<% if @products %>
		<span><strong><%= @products.size %></strong> produto(s) encontrado(s).</span>
		<% end %>		
	</div>
	<div class="right"></div>
	<div class="clear"></div>
</div>

<form method="post">	
	<table id="products" class="grid no_hand">
		<tbody>
		<% if @products.size > 0 %>
			<% @products.each do |product| %>
			<tr>
				<td style="padding: 1em 0 1em 1em;">					
					<div style="display: block; border-style: solid;">
						<a href="<%= product_path(product) %>" style="margin-right: 10px; float: left;" >			
							<%= image_tag product.attachment.url(:thumb), :alt => product.name, 
								:width => 96, :height => 96, :class => "avatar",
								:styles => "max-height:96px; max-width:96px;" %>
						</a>

						<!--
						<div style="text-align: right; margin-top: 14px; padding-left: 12px; float: right;">						
							<a href="#" class="button_info" style="">
								<span>Adicionar ao Pedido</span>
							</a>
						</div>
						-->				

						<div style="height: 32px; vertical-align: middle; display: table-cell; width: 10000px;">
							<span style="color: #333333;">
								<%= link_to product.name, product_path(product) %>
							</span>
							<div style="color: #808080; font-size: 11px;">								
								<%= product.sku %>								
							</div>
							<div style="color: #333333; font-size: 18px; padding-top: 18px;">								
								<%= number_to_currency(product.price) %>				
							</div>
							<div style="color: #808080; font-size: 11px;">
								<%= ( product.description.blank? ? 'sem descrição' : product.description ) %>
							</div>							
					  </div>
					</div>			
				</td>
			</tr>			
			<% end %>
		<% else %>
			<tr>
				<td style="padding: 1em 0 1em 1em; width: 603px;"> 
					<div style="display: block;">Nenhum resultado encontrado para a sua consulta.</div>
				</td>					
			</tr>
		<% end %>
		</tbody>
	</table>
</form>

<div class="paginate bottom">
	<div class="left">
		<a class="back_to_top" href="#content">
			<div class="to_top_icon"></div>
			<strong>voltar ao topo</strong>
			<div class="clear"></div>
		</a>
	</div>
	<div class="right"><%= will_paginate(@products, :previous_label => "&#171; #{t('actions.previous')}", :next_label => "#{t('actions.next')} &#187;") %></div>
	<div class="clear"></div>
</div>
